if {[llength $argv] == 0} {
  send_user "Usage: scriptname username \'password\' hostname \n"
  exit 1
}
send_user "\n\n#######################\n Trying to transfer files \n#######################\n\n"

set timeout 5;
#split($configfile, arr, ".");
